<h1><%= @task.title %></h1>
<h3><%= @task.details %></h3>

<p><input type="checkbox" >
  <span class="checkmark"></span>
  <label class="container"><%= link_to 'This task is completed', tasks_path %>
  </label>


</p>



<p><%= link_to 'Back to index', tasks_path %></p>
<p><%= link_to 'Edit this task', edit_task_path(@task) %></p>
<p><%= link_to 'Delete',
       task_path(@task),
       data: { turbo_method: :delete, turbo_confirm: 'You sure?' } %></p>
